    <dt class="col-3">@Html.DisplayNameFor(emp => emp.FullName)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.FullName)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.Position)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.Position)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.Salary)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.Salary)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.NationalId)</dt>
