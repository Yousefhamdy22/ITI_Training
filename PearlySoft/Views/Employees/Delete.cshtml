    <dt class="col-3">@Html.DisplayNameFor(emp => emp.PhoneNo)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.PhoneNo)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.Email)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.Email)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.SecretCode)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.SecretCode)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.IsActive)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.IsActive)</dd>

    <dt class="col-3">@Html.DisplayNameFor(emp => emp.Appraisal)</dt>
    <dd class="col-9">@Html.DisplayFor(emp => emp.Appraisal)</dd>

